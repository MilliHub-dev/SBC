# Server Configuration
PORT=8787
NODE_ENV=development

# Database Configuration (Neon PostgreSQL)
NEON_DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# PostgreSQL Pool Configuration
PG_POOL_MAX=10

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Admin Configuration
ADMIN_API_KEY=your_admin_api_key_here

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Debug Mode
DEBUG=true

# Sabi Ride API Integration
SABI_RIDE_API_URL=https://tmp.sabirideweb.com.ng/api/v1
SABI_RIDE_API_KEY=your_sabi_ride_api_key

# Web3 Configuration
POLYGON_ZKEVM_RPC_URL=https://zkevm-rpc.com
SABI_CASH_CONTRACT_ADDRESS=0x...

# Mining Configuration
MINING_FREE_RATE=0.9
MINING_BASIC_RATE=15
MINING_PREMIUM_RATE=170
MINING_BASIC_DEPOSIT=100
MINING_PREMIUM_DEPOSIT=1000

# Points to Sabi Cash conversion rate
POINTS_TO_SABI_RATE=0.5
MIN_POINTS_CONVERSION=500